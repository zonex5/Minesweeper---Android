<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/abaut"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true"
        android:onClick="onClick_About">
    <TextView
            android:id="@+id/ab_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:text="Minesweeper Classic from Windows"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true" android:layout_gravity="center_horizontal"/>
    <TextView
            android:id="@+id/ab_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:id="@+id/ab_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Pavel Rotari"
            android:typeface="sans"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:id="@+id/ab_url"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:padding="5dp"
            android:text="http://toway.biz"
            android:textStyle="bold"
            android:textColor="#ff66ccff"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="onClick_AboutURL"/>
</LinearLayout>
